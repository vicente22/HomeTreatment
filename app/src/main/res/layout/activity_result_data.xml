<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ResultDataActivity"
    android:orientation="vertical">
    <TextView
        android:background="@color/colorPrimaryLight"
        android:padding="10dp"
        android:textSize="16sp"
        android:textColor="@color/colorPrimaryText"
        android:text="SE REGISTRÃ“ EL SIGUIENTE TRATAMIENTO:"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:textSize="20sp"
        android:id="@+id/textViewResultName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:textSize="20sp"
        android:id="@+id/textViewResultAge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:textSize="20sp"
        android:id="@+id/textViewResultMyAnnoyance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:textSize="20sp"
        android:id="@+id/textViewHomeTreatment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button
        android:textColor="@color/colorBtn"
        android:background="@color/colorPrimaryDark"
        android:id="@+id/showAllBtn"
        android:text="VER TRATAMIENTOS YA REGISTRADOS"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
            <ListView
                android:visibility="invisible"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/listViewResult">
            </ListView>
    </ScrollView>
</LinearLayout>