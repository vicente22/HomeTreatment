<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/fragmentRegistered"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".views.RegisteredFragment">

        <Button
            android:id="@+id/showAllBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="10dp"
            android:background="@color/colorAccent"
            android:text="VER REGISTROS REALIZADOS"
            android:textColor="@color/colorPrimaryText" />
        <Button
            android:id="@+id/hideAllBtn"
            android:visibility="invisible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="10dp"
            android:background="@color/colorBtn"
            android:text="OCULTAR REGISTROS"
            android:textColor="@color/colorPrimaryText" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerViewResult"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/hideAllBtn"
            android:scrollbars="vertical"
            android:visibility="invisible">

        </android.support.v7.widget.RecyclerView>

    </RelativeLayout>
</ScrollView>