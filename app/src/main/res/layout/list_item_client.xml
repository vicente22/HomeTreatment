<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/back"
    android:orientation="vertical">

    <TextView
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/back"
        android:text="Nombre: " />

    <TextView
        android:padding="5dp"
        android:id="@+id/recyclerName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/back"
        android:text="Edad: " />

    <TextView
        android:padding="5dp"
        android:id="@+id/recyclerAge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/back"
        android:text="Malestar: " />

    <TextView
        android:padding="5dp"
        android:id="@+id/recyclerMyAnnoyance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/back"
        android:text="Tratamiento: " />

    <TextView
        android:padding="5dp"
        android:id="@+id/recyclerHomeTreatment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>