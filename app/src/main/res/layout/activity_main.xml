<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryLight"
    android:orientation="vertical"
    android:padding="5dp"
    tools:context=".MainActivity">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorBtn"
        android:drawableLeft="@mipmap/baseline_local_hospital_black_36dp"
        android:drawableRight="@mipmap/baseline_local_hospital_black_36dp"
        android:padding="10dp"
        android:text="TRATAMIENTO CASERO"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryText"
        android:textSize="20dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nombre completo:"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editTextName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorBtn"
        android:hint="Ingresa tu nombre..." />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Edad" />

    <EditText
        android:id="@+id/editTextAge"
        android:layout_width="30dp"
        android:maxLength="2"
        android:layout_height="wrap_content"
        android:background="@color/colorBtn"
        android:inputType="number" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Acerca del malestar:"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editTextAboutMyAnnoyance"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/colorBtn"
        android:gravity="top"
        android:hint="Escribe un poco del malestar..."
        android:inputType="text|textMultiLine"
        android:textAlignment="gravity" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tu tratamiento"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editTextHomeTreatment"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginBottom="10dp"
        android:background="@color/colorBtn"
        android:gravity="top"
        android:hint="Escribe tu tratamiento casero"
        android:inputType="text|textMultiLine"
        android:textAlignment="gravity" />

    <Button
        android:textColor="@color/colorBtn"
        android:id="@+id/completeBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="10dp"
        android:background="@color/colorPrimaryDark"
        android:text="COMPLETAR FORMULARIO" />
</LinearLayout>